.event-announcement-box {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e7e7e7;
  top: 40rpx;
  width: 100%;
  height: 100rpx;
}

.event-announcement-type {
  width: 38rpx;
  height: 38rpx;
  padding-left: 38rpx;
}

.event-announcement-title {
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #535353;
}

.event-announcement-entrance {
  position: absolute;
  width: 52rpx;
  height: 52rpx;
  right: 30rpx;
}