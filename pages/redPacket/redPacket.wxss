.page-redPacket {
  min-height: 100vh;
  background-color: #f0eff5;
}

.game-title {
  position: relative;
  width: 100%;
  height: 240rpx;
  display: flex;
  justify-content: center;
}

.game-icon {
  position: absolute;
  width: 114rpx;
  height: 114rpx;
  margin-top: 60rpx;
}

.title {
  position: absolute;
  margin-top: 200rpx;
}

.game-video {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.countdown{
  position: absolute;
  background-color:#778899;
  width: 100rpx;
  height: 40rpx;
  border-radius: 40%;
  display: flex;
  justify-content: center;
  top: 280rpx;
  margin-left: 540rpx;
}
.video {
  width: 80%;
  height: 700rpx;
}

.get {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.get-red-packet {
  color: #ffffff;
}

.share {
  position: relative;
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  justify-content: center;
}

.share-page {
  color: #0099ff;
  background-color: #f0eff5;
}