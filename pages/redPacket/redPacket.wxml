<view class="page-redPacket">
  <view class="game-title">
    <image class="game-icon" src="/images/gameIcon_3.png"></image>
    <text class="title">宁波地区好友约局APP</text>
  </view>
  <view class="game-video">
    <video class="video" src="https://iy.fhabc.com/video/dbc1570bf59c202c4c38db081ab073fc.mp4"
      binderror="videoErrorCallback" duration="3000" autoplay="true" bindtimeupdate="getCountdown"
      show-progress="{{false}}" enable-progress-gesture="{{false}}" id="myVideo"></video>
  </view>
  <view class="countdown">{{countdown}}</view>
  <view class="get">
    <button class="get-red-packet" style="background-color:{{isClick?'#0000FF':'#C0C0C0'}}"
      disabled="{{isClick?false:true}}" bindtap="getRedPacket">预约红包封面</button>
  </view>
  <view class="share">
    <button class="share-page" open-type="share" hover-class='none'>
      <text class="share-title">分享给更多的朋友</text>
    </button>
  </view>
</view>