.page-moreActivityNotice {
  min-height: 100vh;
  background-color: #f0eff5;
}

.activity-notice-list {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
}

.activity-status {
  position: absolute;
  z-index: 1;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 70rpx;
  font-size: 26rpx;
  border: 3rpx solid;
  border-color: #4169E1;
  color: #4169E1;
  text-align-last: center;
  text-align: center;
}

.activity-title {
  position: absolute;
  z-index: 1;
  margin-top: 22rpx;
  margin-left: 120rpx;
  font-size: 24rpx;
}

.activity-entrance-icon {
  position: absolute;
  z-index: 1;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 680rpx;
  color: #778899;
}