.eventAnnouncement-title {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
  color: #000000;
  font-size: 28rpx;
}

.eventAnnouncement-time {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
  color: #b2b2b2;
  border-bottom: 1rpx solid #f3f2f7;
  padding-bottom: 20rpx;
  font-size: 24rpx;
}

.eventAnnouncement-content-box {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  width: 100%;
}

.eventAnnouncement-content-title {
  color: #737373;
  margin-left: 50rpx;
  font-size: 28rpx;
}

.eventAnnouncement-content-content {
  color: #bababa;
  margin-left: 50rpx;
  padding-right: 50rpx;
  font-size: 28rpx;
}